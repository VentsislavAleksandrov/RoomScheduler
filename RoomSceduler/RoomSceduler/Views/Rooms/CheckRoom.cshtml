@using RoomSceduler.Models.Rooms

@model CheckRoomFormModel

@{
    ViewData["Title"] = "Check Room";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Check Room</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" placeholder="Enter date here">
                <span asp-validation-for="Date" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPartisipants"></label>
                <input asp-for="NumberOfPartisipants" class="form-control" placeholder="Enter number of participants here">
                <span asp-validation-for="NumberOfPartisipants" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeetingDuration"></label>
                <input asp-for="MeetingDuration" class="form-control" placeholder="Enter meeting duration in minutes here">
                <span asp-validation-for="MeetingDuration" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Check" />
        </form>
    </div>
</div>